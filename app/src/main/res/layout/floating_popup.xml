<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="#F5E6E3"
    android:layout_gravity="center"
    android:padding="25dp">

    <EditText
        android:id="@+id/mn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#5CA490"

        />

    <EditText
        android:id="@+id/mt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#5CA490"

        android:hint="medtype" />

    <EditText
        android:id="@+id/mnop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="#5CA490"

        android:gravity="center"
        android:hint="mednop" />

    <EditText
        android:id="@+id/mnumtime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#5CA490"

        android:hint="mednumoftimes" />


    <EditText
        android:id="@+id/mdoses"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="#5CA490"

        android:gravity="center"
        android:hint="meddoses" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="90dp"
        android:padding="16dp">

        <Button
            android:id="@+id/btnn3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FBD5CD"
            android:gravity="center"
            android:shadowColor="#FBD5CD"
            android:shadowDx="4"
            android:shadowDy="8"
            android:shadowRadius="2"
            android:text="خروج"
            android:textColor="#FFFF"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnn2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FBD5CD"
            android:gravity="center"
            android:shadowColor="#FBD5CD"
            android:shadowDx="4"
            android:shadowDy="8"
            android:shadowRadius="2"
            android:text="حذف"
            android:textColor="#FFFF"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
