<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F5E6E3"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/vacc"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="474dp"

        android:layout_marginBottom="188dp"
        android:background="@drawable/border"
        android:backgroundTint="#FBD5CD"
        android:shadowRadius="2"
        android:shadowColor="#FBD5CD"
        android:shadowDx="4"
        android:shadowDy="8"
        android:gravity="center"
        android:text="هل تود اضافة مذكرة للقاحات طفلك الى حسابك؟ أضفها من هنا!"
        android:textColor="#5CA490" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="255dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="586dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/border"
        android:backgroundTint="#FBD5CD"
        android:gravity="center"
        android:shadowColor="#FBD5CD"
        android:shadowDx="4"
        android:shadowDy="8"
        android:shadowRadius="2"
        android:text="تسجيل الخروج"
        android:textColor="#5CA490" />

    <TextView
        android:id="@+id/deleteAcc"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="636dp"
        android:layout_marginBottom="26dp"

        android:gravity="center"
        android:text="حذف الحساب"
        android:textColor="#000" />

    <LinearLayout
        android:id="@+id/lnrlyout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <EditText
                    android:id="@+id/usern"

                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="اسم المستخدم يظهر هنا"
                    android:textColor="#5CA490"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewU"

                    android:layout_width="146dp"
                    android:layout_height="33dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:hint="اسم المستخدم"
                    android:textAlignment="center"

                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="#5CA490"
                    android:textColorHint="#5CA490"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#5CA490"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#5CA490"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <EditText
                    android:id="@+id/phonenum"

                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="رقم الهاتف يظهر هنا"
                    android:textColor="#5CA490"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewPH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:gravity="end"
                    android:hint="رقم الهاتف"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="#5CA490"
                    android:textColorHint="#5CA490"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#5CA490"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <EditText
                    android:id="@+id/chrons"

                    android:layout_width="211dp"
                    android:layout_height="73dp"
                    android:layout_gravity="right"
                    android:textColor="#5CA490"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewCHR"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:textAlignment="center"
                    android:gravity="end"
                    android:hint="الامراض المزمنة "
                    android:layout_gravity="right"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="#5CA490"
                    android:textColorHint="#5CA490"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                android:textSize="16dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <EditText
                    android:id="@+id/passwoord"

                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:inputType="textPassword"
                    android:text="كلمة المرور تظهر هنا"
                    android:textColor="#5CA490"

                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:gravity="end"
                    android:hint="كلمة المرور"
                    android:inputType="textPassword"
                    android:letterSpacing="0.1"
                    android:textColor="#5CA490"
                    android:textColorHint="#5CA490"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                android:textSize="16dp" />
            </LinearLayout>

            <Button
                    android:id="@+id/btnsaavvee"
                    android:layout_width="169dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:background="#5CA490"
                    android:text="تعديل"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="18dp" />


                android:textSize="16dp" />

            <Button
                android:id="@+id/btnsaavvee2"
                android:layout_width="169dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:background="#5CA490"
                android:text="تخزين"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="18dp" /><![CDATA[


            android:textSize="16dp" />
            ]]>
        </LinearLayout>


        </LinearLayout>

    <Button
        android:id="@+id/vacAdd"
        android:layout_width="167dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:layout_marginBottom="151dp"
        android:background="#5CA490"
        android:text="اضف طفلك"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="18dp" />


</RelativeLayout>